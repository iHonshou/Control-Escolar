<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/logoisic"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            />

        <!-- CardView para Bebidas (actúa como botón) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_asignaturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignaturas"
                android:padding="20dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />
        </androidx.cardview.widget.CardView>

        <!-- CardView para Platillos (actúa como botón) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_alumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alumnos"
                android:padding="20dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />
        </androidx.cardview.widget.CardView>

        <!-- CardView para Postres (actúa como botón) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_calificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calificar"
                android:padding="20dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />
        </androidx.cardview.widget.CardView>

        <!-- Espacio inferior para empujar el contenido hacia el centro y el texto de versión hacia abajo -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Versión de la app (centrada horizontalmente) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/verision_app"
            android:textColor="@color/negro"
            android:layout_marginTop="50dp"
            android:alpha="0.6"
            android:textSize="12sp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</FrameLayout>