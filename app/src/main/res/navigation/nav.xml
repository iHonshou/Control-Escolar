<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.itsoeh.hhdaniel.portalescolar.splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_menu"
            app:enterAnim="@anim/fadein"
            app:destination="@id/menu" />
    </fragment>
    <fragment
        android:id="@+id/asignaturas"
        android:name="com.itsoeh.hhdaniel.portalescolar.asignaturas"
        android:label="fragment_asignaturas"
        tools:layout="@layout/fragment_asignaturas" >
        <action
            android:id="@+id/action_asignaturas_to_menu"
            app:enterAnim="@anim/barridosalida"
            app:destination="@id/menu" />
    </fragment>
    <fragment
        android:id="@+id/menu"
        android:name="com.itsoeh.hhdaniel.portalescolar.menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menu_to_asignaturas"
            app:enterAnim="@anim/barrido"
            app:destination="@id/asignaturas" />
        <action
            android:id="@+id/action_menu_to_estudiantes"
            app:enterAnim="@anim/barrido"
            app:destination="@id/estudiantes" />
        <action
            android:id="@+id/action_menu_to_calificaciones"
            app:enterAnim="@anim/barrido"
            app:destination="@id/calificaciones" />
        <action
            android:id="@+id/action_menu_to_calificaciones2"
            app:destination="@id/calificaciones" />
    </fragment>
    <fragment
        android:id="@+id/estudiantes"
        android:name="com.itsoeh.hhdaniel.portalescolar.estudiantes"
        android:label="fragment_estudiantes"
        tools:layout="@layout/fragment_estudiantes" >
        <action
            android:id="@+id/action_estudiantes_to_menu"
            app:enterAnim="@anim/barridosalida"
            app:destination="@id/menu" />
    </fragment>
    <fragment
        android:id="@+id/calificaciones"
        android:name="com.itsoeh.hhdaniel.portalescolar.calificaciones"
        android:label="fragment_calificaciones"
        tools:layout="@layout/fragment_calificaciones" >
        <action
            android:id="@+id/action_calificaciones_to_menu"
            app:enterAnim="@anim/barridosalida"
            app:destination="@id/menu" />
    </fragment>
</navigation>